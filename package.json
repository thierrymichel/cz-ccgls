  },
  "license": "SEE LICENSE IN UNLICENSE",
  "dependencies": {
    "chalk": "^3.0.0",
    "cli-truncate": "^2.1.0",
    "conventional-commit-types": "^2.3.0",
    "find-cache-dir": "^3.1.0",
    "fuzzy": "^0.1.3",
    "import-from": "^3.0.0",
    "inquirer": "^7.0.0",
